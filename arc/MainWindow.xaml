<Window x:Class="arc.MainWindow"
        xmlns:Standard_UC_JJO="clr-namespace:Standard_UC_JJO;assembly=Standard_UC_JJO"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arc"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="450">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="auto" x:Name="slider_dynamique"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Manu" Click="Mode_Manu"/>
            <MenuItem Header="Dynamique" Click="Mode_Dynamique"/>
            <MenuItem Header="Source" Click="Mode_Source"/>
        </Menu>
        
        <StackPanel Grid.Row="1" Orientation="Vertical" Name="sp_rings_sliders">
            <Standard_UC_JJO:Slider_INT_JJO _label_title="Nombre d'anneau"  
                  _value="{Binding DataContext.intvalue, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}" 
                  _value_min="1" _value_max="5"/>
            <Label Name="lbl_nbr_boutons" Content=""/>
        </StackPanel>

        <Grid Grid.Row="2" x:Name="grd"/>
    </Grid>
</Window>
