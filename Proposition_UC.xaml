<UserControl x:Class="EMGU.CV.Proposition_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMGU.CV"
             mc:Ignorable="d" 
             d:DesignHeight="256" d:DesignWidth="256">
    <Grid MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Name="wpfImage" />
        <Label Grid.Row="1" Name="lbl" HorizontalContentAlignment="Center" />

        <Image x:Name="icone_del" Source="Images/ButtonClose.png" Width="40" Height="40" Margin="0,0,10,10"
               HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="Hidden" 
               RenderOptions.BitmapScalingMode="Fant" MouseUp="Image_MouseUp"/>

    </Grid>
</UserControl>
